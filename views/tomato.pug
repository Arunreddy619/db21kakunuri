extends layout

block content
  div(class="row m-2")
    h1(class="col-sm-10")= title
    a(href = "tomato/create" class="btn bg-dark text-white col-sm-2") Create
  
  - const tomato = ['tomato_type','expdata','Cost','Actions']
  - let items = results;
  - let o;
  script.
    function buy(x){
      alert('purchased item' + x)
   } 
  div(class='container-fluid')
    div(class="d-flex justify-content-end")

    div(class="p-3 mb-2 bg-dark text-white row")
     each item in tomato
      div(class='col-sm-2' ) #{item}
    
    each o, index in items
      div(class="p-3 mb-2 bg-dark text-white row" onclick='buy('+index+')')
        div(class='col-sm-2') #{o.tomato_type}
        div(class='col-sm-2') #{o.expdata}
        div(class='col-sm-2') $ #{o.cost}
        div(class='col-sm-6')
          a(class='m-2' href="resource/update/?id="+o._id) Update
          a(class='m-2' href="resource/delete/?id="+o._id) Delete
          a(class='m-2' href="resource/detail/?id="+o._id) View